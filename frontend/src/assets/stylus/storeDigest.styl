.store-digest
  padding-left: 10px;
  padding-right: 10px;
  margin-bottom: 5px;

  .store-name
    font-size: 25px;
    font-weight: bold;
    padding: 5px 0;
    h2
      margin 0.3em 0;

  .graph
    border: 2px solid #b3b3b3;
    padding: 5px;
    min-height: 12em;
    height: 12em;
    line-height: 12em;
    text-align: center;
    margin-bottom: 5px;
    background-color: #ececec;

  .text-center
    text-align: center !important;

